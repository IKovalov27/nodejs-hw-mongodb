{
    "openapi": "3.1.0",
    "info": {
      "version": "1.0.0",
      "title": "Contacts app",
      "license": {
        "name": "Apache 2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
      },
      "description": "This is a documentation of contacts app"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      },
      {
        "url": "https://contacts-ze80.onrender.com"
      }
    ],
    "tags": [
      {
        "name": "Contacts",
        "description": "Operations about contacts."
      }
    ],
    "paths": {
      "/auth/register": {
        "post": {
          "tags": [
            "register"
          ],
          "summary": "Create an user",
          "operationId": "createUser",
          "description": "Create a new user",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "name",
                    "email",
                    "password"
                  ],
                  "properties": {
                    "name": {
                      "description": "User's name",
                      "type": "string",
                      "example": "Pontius Pilate"
                    },
                    "email": {
                      "description": "User's email",
                      "type": "string",
                      "example": "Pontius@example.com"
                    },
                    "password": {
                      "description": "User's password",
                      "type": "string",
                      "example": "314159265"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "register new user",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully registered a user!"
                      },
                      "data": {
                        "type": "object",
                        "$ref": "#/components/schemas/user"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            },
            "404": {
              "$ref": "#/components/responses/404"
            }
          }
        }
      },
      "/auth/login": {
        "post": {
          "tags": [
            "login"
          ],
          "summary": "Login user",
          "operationId": "loginUser",
          "description": "Login user",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "email",
                    "password"
                  ],
                  "properties": {
                    "email": {
                      "description": "User's email",
                      "type": "string",
                      "example": "Pontius@example.com"
                    },
                    "password": {
                      "description": "User's password",
                      "type": "string",
                      "example": "314159265"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully logged in an user!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully logged in an user!"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "accessToken": {
                            "type": "string",
                            "example": "/o3zisDMXSGJUQXfa+V49JYXHuQ="
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            }
          }
        }
      },
      "/auth/logout": {
        "post": {
          "tags": [
            "logout"
          ],
          "summary": "Logout user",
          "operationId": "logout",
          "description": "Logout user",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "description": "access token",
              "required": true,
              "schema": {
                "type": "string",
                "example": "Logout user"
              }
            },
            {
              "name": "sessionId",
              "in": "cookie",
              "description": "session id",
              "required": true,
              "schema": {
                "type": "string",
                "example": "60c72b2f4f1a4e3d8c7e4b3a"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully logged in an user!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully logged in an user!"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "accessToken": {
                            "type": "string",
                            "example": "60c72b2f4f1a4e3d8c7e4b3a"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            }
          }
        }
      },
      "/contacts/{id}": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Get contact by id",
          "operationId": "getContact",
          "description": "Get contact by id",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "example": "65ca67e7ae7f10c88b598384"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully found contact with id",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully found contact with id 65ca67e7ae7f10c88b598384!"
                      },
                      "data": {
                        "type": "object",
                        "$ref": "#/components/schemas/contact"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            }
          }
        },
        "patch": {
          "tags": [
            "Contacts"
          ],
          "summary": "Patch contact by id",
          "operationId": "patchContact",
          "description": "Patch contact by id",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "example": "668960e14df8e8fd55e56b39"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "photo": {
                      "type": "string",
                      "format": "binary"
                    }
                  },
                  "required": [
                    "name",
                    "email",
                    "phone"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully updated contact",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "668960e14df8e8fd55e56b39"
                          },
                          "name": {
                            "type": "string",
                            "example": "Pontius Pilate"
                          },
                          "email": {
                            "type": "string",
                            "example": "Pontius@example.com"
                          },
                          "phone": {
                            "type": "string",
                            "example": "+380314159265"
                          },
                          "photo": {
                            "type": "string",
                            "example": "https://res.cloudinary.com/dnrylskyq/image/upload/v1720275725/ekihrqdhktaoicsqflfp.jpg"
                          }
                        }
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully patched contact!"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            },
            "404": {
              "$ref": "#/components/responses/404"
            }
          }
        },
        "delete": {
          "tags": [
            "Contacts"
          ],
          "summary": "Delete contact by id",
          "operationId": "deleteContact",
          "description": "Delete contact by id",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "required": true,
              "schema": {
                "type": "string",
                "example": "668960e14df8e8fd55e56b39"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Successfully contact deleted"
            },
            "401": {
              "$ref": "#/components/responses/401"
            },
            "404": {
              "$ref": "#/components/responses/404"
            }
          }
        }
      },
      "/contacts": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Get all contacts",
          "operationId": "getAllContacts",
          "description": "Get all contacts",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "in": "query",
              "name": "page",
              "description": "current page number",
              "schema": {
                "type": "number",
                "example": 1
              }
            },
            {
              "in": "query",
              "name": "perPage",
              "description": "limit contacts per page",
              "schema": {
                "type": "number",
                "example": 5
              }
            },
            {
              "in": "query",
              "name": "sortBy",
              "schema": {
                "type": "string",
                "example": "name",
                "enum": [
                  "_id",
                  "name",
                  "phoneNumber",
                  "email"
                ],
                "description": "Select one or all fields. The id field is selected by default"
              }
            },
            {
              "in": "query",
              "name": "sortOrder",
              "schema": {
                "type": "string",
                "enum": [
                  "asc, desc"
                ],
                "example": "asc",
                "description": "Default value - asc"
              }
            },
            {
              "in": "query",
              "name": "totalItems",
              "schema": {
                "type": "number",
                "example": 10
              }
            },
            {
              "in": "query",
              "name": "totalPages",
              "schema": {
                "type": "number",
                "example": 9
              }
            },
            {
              "in": "query",
              "name": "hasNextPage",
              "schema": {
                "type": "boolean",
                "example": true
              }
            },
            {
              "in": "query",
              "name": "hasPreviousPage",
              "schema": {
                "type": "boolean",
                "example": false
              }
            },
            {
              "in": "query",
              "name": "isFavourite",
              "schema": {
                "type": "boolean",
                "example": true
              },
              "description": "Display your favourite contacts"
            },
            {
              "in": "query",
              "name": "contactType",
              "schema": {
                "type": "string",
                "enum": [
                  "work",
                  "home",
                  "personal"
                ],
                "example": "work"
              },
              "description": "Display contacts by type"
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully found contacts!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully found contacts!"
                      },
                      "data": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/contact"
                        }
                      },
                      "page": {
                        "type": "number",
                        "example": 1
                      },
                      "perPage": {
                        "type": "number",
                        "example": 5
                      },
                      "totalItems": {
                        "type": "number",
                        "example": 10
                      },
                      "totalPages": {
                        "type": "number",
                        "example": 8
                      },
                      "hasNextPage": {
                        "type": "boolean",
                        "example": true
                      },
                      "hasPreviousPage": {
                        "type": "boolean",
                        "example": false
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            }
          }
        },
        "post": {
          "tags": [
            "Contacts"
          ],
          "summary": "Create contact",
          "operationId": "createContact",
          "description": "Create contact",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "required": [
                    "name",
                    "phoneNumber"
                  ],
                  "properties": {
                    "name": {
                      "description": "Contact's name",
                      "type": "string",
                      "example": "Pontius Pilate"
                    },
                    "phoneNumber": {
                      "description": "Contact's phone number",
                      "type": "string",
                      "example": "+380314159265"
                    },
                    "isFavourite": {
                      "description": "Contact's favourite",
                      "type": "boolean",
                      "default": false,
                      "example": true
                    },
                    "contactType": {
                      "description": "Contact's type",
                      "type": "string",
                      "enum": [
                        "work",
                        "home",
                        "personal"
                      ],
                      "default": "personal",
                      "example": "home"
                    },
                    "photo": {
                      "description": "Contact's photo",
                      "type": "string",
                      "example": "https://res.cloudinary.com/dnrylskyq/image/upload/v1720275725/ekihrqdhktaoicsqflfp.jpg"
                    },
                    "userId": {
                      "description": "Owner id of the contact",
                      "type": "string",
                      "example": "668960e14df8e8fd55e56b39"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Creates a contact",
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "required": [
                      "status",
                      "message",
                      "data"
                    ],
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 201
                      },
                      "message": {
                        "type": "string",
                        "example": "Successfully created a contact!"
                      },
                      "data": {
                        "type": "object",
                        "$ref": "#/components/schemas/contact"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "$ref": "#/components/responses/401"
            },
            "404": {
              "$ref": "#/components/responses/404"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer"
        }
      },
      "schemas": {
        "user": {
          "type": "object",
          "required": [
            "name",
            "email",
            "password"
          ],
          "properties": {
            "_id": {
              "type": "string",
              "example": "6689530d4df8e8fd55e56b2f"
            },
            "name": {
              "type": "string",
              "example": "Pontius Pilate"
            },
            "email": {
              "type": "string",
              "example": "Pontius@example.com"
            },
            "password": {
              "type": "string",
              "example": "314159265"
            },
            "createdAt": {
              "type": "string",
              "example": "2024-08-23T15:21:05.730Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2024-08-23T15:21:05.730Z"
            }
          }
        },
        "contact": {
          "type": "object",
          "required": [
            "name",
            "phoneNumber",
            "userId",
            "contactType"
          ],
          "properties": {
            "name": {
              "description": "Contact's name",
              "type": "string",
              "example": "Pontius Pilate"
            },
            "phoneNumber": {
              "description": "Contact's phone number",
              "type": "string",
              "example": "+380314159265"
            },
            "_id": {
              "description": "Contact's id",
              "type": "string",
              "example": "6689530d4df8e8fd55e56b2f"
            },
            "email": {
              "description": "Contact's email",
              "type": "string",
              "example": "Pontius@example.com"
            },
            "isFavourite": {
              "description": "Contact's favourite status can be true or false",
              "type": "boolean",
              "example": true
            },
            "contactType": {
              "description": "Contact's type can be work, home or personal",
              "type": "string",
              "enum": [
                "work",
                "home",
                "personal"
              ],
              "example": "home"
            },
            "photo": {
              "description": "Link to contact photo",
              "type": "string",
              "example": "https://res.cloudinary.com/dnrylskyq/image/upload/v1720275725/ekihrqdhktaoicsqflfp.jpg"
            },
            "userId": {
              "description": "User id",
              "type": "string",
              "example": "668960e14df8e8fd55e56b39"
            },
            "createdAt": {
              "type": "string",
              "example": "2024-08-23T15:21:05.730Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2024-08-23T15:21:05.730Z"
            }
          }
        }
      },
      "responses": {
        "401": {
          "description": "Unauthorized error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "message",
                  "data"
                ],
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 401
                  },
                  "message": {
                    "type": "string",
                    "example": "UnauthorizedError"
                  },
                  "data": {
                    "type": "object",
                    "required": [
                      "message"
                    ],
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Access token expired"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "Contact not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "message",
                  "data"
                ],
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 404
                  },
                  "message": {
                    "type": "string",
                    "example": "Contact not found"
                  },
                  "data": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
